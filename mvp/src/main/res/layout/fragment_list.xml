<?xml version="1.0" encoding="utf-8"?>
<cc.colorcat.mvp.extension.widget.InterceptSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/srl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:refreshEnabled="true">

    <!--嵌套一层 FrameLayout 以便网络出错时可显示网络出错的提示界面-->
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</cc.colorcat.mvp.extension.widget.InterceptSwipeRefreshLayout>