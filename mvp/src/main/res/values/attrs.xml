<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScrollViewPager">
        <attr name="enable_scroll" format="boolean" />
        <attr name="enable_intercept" format="boolean" />
        <attr name="enable_horizontal_scroll" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TernaryTextView">
        <attr name="drawableStart" format="reference" />
        <attr name="drawableCenter" format="reference" />
        <attr name="drawableEnd" format="reference" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="InterceptSwipeRefreshLayout">
        <attr name="refreshEnabled" format="boolean" />
    </declare-styleable>
</resources>